{
    "name": "bsqm",
    "displayName": "Beat Saber Quest Modding",
    "description": "Utilities to make modding the Oculus Quest version of Beat Saber easier",
    "version": "0.1.0",
    "publisher": "raftario",
    "engines": {
        "vscode": "^1.38.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "categories": [
        "Other"
    ],
    "keywords": [
        "beat saber",
        "modding",
        "oculus",
        "quest",
        "mod"
    ],
    "activationEvents": [
        "workspaceContains:**/beatonmod.json",
        "workspaceContains:**/beatsaber-hook",
        "onCommand:bsqm.activate",
        "onCommand:bsqm.configure",
        "onCommand:bsqm.create"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "bsqm.create",
                    "when": "config.bsqm.tools.git != "
                },
                {
                    "command": "bsqm.build",
                    "when": "config.bsqm.tools.ndk != "
                },
                {
                    "command": "bsqm.push",
                    "when": "config.bsqm.tools.adb != "
                },
                {
                    "command": "bsqm.buildAndPush",
                    "when": "config.bsqm.tools.ndk != "
                }
            ]
        },
        "commands": [
            {
                "category": "BSQM",
                "command": "bsqm.activate",
                "title": "Activate."
            },
            {
                "category": "BSQM",
                "command": "bsqm.configure",
                "title": "Configure..."
            },
            {
                "category": "BSQM",
                "command": "bsqm.create",
                "title": "Create new project...",
                "enablement": "config.bsqm.tools.git != "
            },
            {
                "category": "BSQM",
                "command": "bsqm.build",
                "title": "Build project.",
                "enablement": "config.bsqm.tools.ndk != "
            },
            {
                "category": "BSQM",
                "command": "bsqm.push",
                "title": "Push project.",
                "enablement": "config.bsqm.tools.adb != "
            },
            {
                "category": "BSQM",
                "command": "bsqm.buildAndPush",
                "title": "Build & push project."
            }
        ],
        "configuration": {
            "title": "BSQM",
            "properties": {
                "bsqm.tools.git": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to Git binary"
                },
                "bsqm.tools.adb": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to adb binary"
                },
                "bsqm.tools.ndk": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to Android NDK build script"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "tslint './**/.ts'"
    },
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "dependencies": {
        "fs-extra": "^8.1.0",
        "node-fetch": "^2.6.0",
        "nunjucks": "^3.2.0",
        "unzipper": "^0.10.5",
        "which": "^1.3.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/node-fetch": "^2.5.0",
        "@types/nunjucks": "^3.1.2",
        "@types/unzipper": "^0.10.0",
        "@types/vscode": "^1.38.0",
        "@types/which": "^1.3.1",
        "glob": "^7.1.4",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "mocha": "^6.1.4",
        "prettier": "^1.18.2",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.3.1",
        "vscode-test": "^1.2.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/raftario/vscode-bsqm.git"
    },
    "bugs": {
        "url": "https://github.com/raftario/vscode-bsqm/issues"
    },
    "homepage": "https://github.com/raftario/vscode-bsqm",
    "husky": {
        "hooks": {
            "pre-commit": "tsc && lint-staged"
        }
    },
    "lint-staged": {
        "*.ts?(x)": [
            "tslint --fix",
            "git add"
        ],
        "*!(.(t|j)s?(x)).(?(s)css|less|html|json|md?(x)|y?(a)ml)": [
            "prettier --write",
            "git add"
        ]
    }
}
