{
    "name": "bsqm",
    "displayName": "Beat Saber Quest Modding",
    "description": "Utilities to make modding the Oculus Quest version of Beat Saber easier",
    "version": "0.2.0",
    "publisher": "raftario",
    "engines": {
        "vscode": "^1.38.0"
    },
    "license": "SEE LICENSE IN LICENSE",
    "categories": [
        "Other"
    ],
    "keywords": [
        "beat saber",
        "modding",
        "oculus",
        "quest",
        "mod"
    ],
    "activationEvents": [
        "workspaceContains:**/beatonmod.json",
        "workspaceContains:**/bmbfmod.json",
        "workspaceContains:**/beatsaber-hook",
        "workspaceContains:**/info.dat",
        "onCommand:bsqm.activate",
        "onCommand:bsqm.configure",
        "onCommand:bsqm.create"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "bsqm.create",
                    "when": "config.bsqm.tools.git != "
                }
            ]
        },
        "commands": [
            {
                "category": "BSQM",
                "command": "bsqm.activate",
                "title": "Activate."
            },
            {
                "category": "BSQM",
                "command": "bsqm.configure",
                "title": "Configure..."
            },
            {
                "category": "BSQM",
                "command": "bsqm.create",
                "title": "Create new project...",
                "enablement": "config.bsqm.tools.git != "
            }
        ],
        "configuration": {
            "title": "BSQM",
            "properties": {
                "bsqm.tools.git": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to Git binary"
                },
                "bsqm.tools.adb": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to adb binary"
                },
                "bsqm.tools.ndk": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "format": "uri",
                    "description": "Path to Android NDK build script"
                }
            }
        },
        "jsonValidation": [
            {
                "fileMatch": "bmbfmod.json",
                "url": "./intellisense/bmbfmod.schema.json"
            },
            {
                "fileMatch": "info.dat",
                "url": "https://raw.githubusercontent.com/lolPants/beatmap-schemas/master/schemas/info.schema.json"
            },
            {
                "fileMatch": "{Easy,Normal,Hard,Expert,ExpertPlus}.dat",
                "url": "https://raw.githubusercontent.com/lolPants/beatmap-schemas/master/schemas/difficulty.schema.json"
            }
        ],
        "snippets": [
            {
                "language": "c",
                "path": "./intellisense/snippets.json"
            },
            {
                "language": "cpp",
                "path": "./intellisense/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc",
        "watch": "tsc -watch",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js",
        "lint": "prettier --write **/*.{json,md,yml,html} && eslint --fix **/*.{ts,js}"
    },
    "extensionDependencies": [
        "ms-vscode.cpptools"
    ],
    "icon": "media/icon.jpeg",
    "galleryBanner": {
        "color": "#292929",
        "theme": "dark"
    },
    "dependencies": {
        "fs-extra": "^8.1.0",
        "node-fetch": "^2.6.0",
        "nunjucks": "^3.2.0",
        "unzipper": "^0.10.5",
        "which": "^1.3.1"
    },
    "devDependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/node-fetch": "^2.5.0",
        "@types/nunjucks": "^3.1.2",
        "@types/unzipper": "^0.10.0",
        "@types/vscode": "^1.38.0",
        "@types/which": "^1.3.1",
        "@typescript-eslint/eslint-plugin": "^2.3.3",
        "@typescript-eslint/parser": "^2.3.3",
        "eslint": "^6.5.1",
        "eslint-config-prettier": "^6.4.0",
        "eslint-plugin-prettier": "^3.1.1",
        "glob": "^7.1.4",
        "husky": "^3.0.5",
        "lint-staged": "^9.2.5",
        "mocha": "^6.1.4",
        "prettier": "^1.18.2",
        "typescript": "^3.3.1",
        "vscode-test": "^1.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/raftario/vscode-bsqm.git"
    },
    "bugs": {
        "url": "https://github.com/raftario/vscode-bsqm/issues"
    },
    "homepage": "https://github.com/raftario/vscode-bsqm",
    "husky": {
        "hooks": {
            "pre-commit": "tsc && lint-staged"
        }
    },
    "lint-staged": {
        "*.{json,md,yml,html}": [
            "prettier --write",
            "git add"
        ],
        "*.{ts,js}": [
            "eslint --fix",
            "git add"
        ]
    }
}
